{
  "manifest_version": 3,
  "name": "ALT 检测插件",
  "description": "ALT - 数据监控插件",
  "version": "1.7.1",
  "action": {
    "default_title": "ALT - 数据监控插件",
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "64": "images/64.png",
      "128": "images/128.png"
    }
  },
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "64": "images/64.png",
    "128": "images/128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "css": ["styles/content.css"],
      "matches": ["https://seller.walmart.com/payments/statements/*"]
    }
  ],
  "background": {
    "service_worker": "scripts/background/index.js",
    "type": "module"
  },
  "permissions": ["activeTab", "storage", "alarms", "tabs", "webRequest"],
  "host_permissions": ["*://*.walmart.com/*"]
}
